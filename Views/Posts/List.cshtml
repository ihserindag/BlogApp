@model List<Post>

<div class="row">
    <div class="col-12">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="text-gradient mb-1">
                    <i class="bi bi-list-ul me-2"></i>Post Listesi
                </h1>
                <p class="text-secondary mb-0">Tüm gönderileri yönetin</p>
            </div>
            <a asp-controller="Posts" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Yeni Post
            </a>
        </div>
        
        <!-- Posts Table -->
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 150px;">Görsel</th>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Yazar</th>
                                <th>Durum</th>
                                <th>Yayın Tarihi</th>
                                <th style="width: 180px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="/img/@item.Image" class="img-fluid rounded-2" alt="@item.Title" 
                                             style="width: 80px; height: 60px; object-fit: cover;">
                                    </td>
                                    <td><span class="badge bg-secondary">@item.PostId</span></td>
                                    <td>
                                        <a asp-controller="Posts" asp-action="Details" asp-route-url="@item.Url" 
                                           class="fw-bold text-decoration-none">
                                            @item.Title
                                        </a>
                                    </td>
                                    <td>
                                        <a asp-controller="Users" asp-action="Profile" asp-route-username="@item.User.UserName"
                                           class="text-decoration-none">
                                            <i class="bi bi-person-circle me-1"></i>@item.User.Name
                                        </a>
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1"></i>Aktif
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock me-1"></i>Pasif
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-secondary">
                                            @(item.PublishedOn?.ToString("d MMM yyyy") ?? "-")
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Posts" asp-action="Edit" asp-route-id="@item.PostId"
                                               class="btn btn-outline-primary btn-sm" title="Düzenle">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-controller="Posts" asp-action="Delete" asp-route-id="@item.PostId"
                                               class="btn btn-outline-danger btn-sm" title="Sil">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                <h4 class="text-muted">Henüz hiç gönderi yok</h4>
                <p class="text-secondary">İlk gönderinizi oluşturmak için "Yeni Post" butonuna tıklayın.</p>
                <a asp-controller="Posts" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-lg me-1"></i> İlk Postu Oluştur
                </a>
            </div>
        }
    </div>
</div>
