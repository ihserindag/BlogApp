@model List<Tag>

<div class="card shadow-sm border-0 mb-4 fade-in">
    <div class="card-header bg-transparent border-0 pb-0">
        <h5 class="fw-bold mb-0">
            <i class="bi bi-tags-fill text-primary me-2"></i>Etiketler
        </h5>
    </div>
    <div class="card-body">
        <div class="d-flex flex-wrap gap-2">
            @if (Model.Any())
            {
                @foreach (var tag in Model)
                {
                    <a asp-controller="Posts" asp-action="Index" asp-route-tag="@tag.Url" 
                       class="barge bg-@tag.Color bg-opacity-10 text-@tag.Color text-decoration-none">
                        <i class="bi bi-tag-fill me-1"></i>@tag.Text
                    </a>
                }
            }
            else
            {
                <p class="text-muted small mb-0">Hen√ºz etiket yok.</p>
            }
        </div>
    </div>
</div>
